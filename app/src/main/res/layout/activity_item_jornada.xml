<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grisFondo"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:textColor="@color/negro"
            android:textStyle="bold"
            android:background="@color/amarilloSuave"/>

        <TextView
            android:id="@+id/tvHora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/negro"
            android:textStyle="bold"
            android:background="@color/amarilloSuave"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:gravity="top"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvNombreLocal"
            android:layout_width="wrap_content"
            android:layout_height="32sp"
            android:gravity="start"
            android:layout_gravity="start"
            android:textColor="@color/negro"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/ivLocal"
            android:layout_width="40sp"
            android:layout_height="32sp"
            android:layout_gravity="start"
            app:srcCompat="@mipmap/ic_equipos128_foreground"
            android:contentDescription="@string/equipo_loc" />

        <TextView
            android:id="@+id/tvPuntosLocal"
            android:layout_width="match_parent"
            android:layout_height="32sp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/negro"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvLineaSeparatoria"
            android:layout_width="match_parent"
            android:layout_height="32sp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/negro"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPuntosVisitante"
            android:layout_width="match_parent"
            android:layout_height="32sp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/negro"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivVisitante"
            android:layout_width="40sp"
            android:layout_height="32sp"
            android:layout_weight="1"
            android:gravity="end"
            android:layout_gravity="end"
            app:srcCompat="@mipmap/ic_equipos128_foreground"
            android:contentDescription="@string/equipo_vis" />

        <TextView
            android:id="@+id/tvNombreVisitante"
            android:layout_width="wrap_content"
            android:layout_height="32sp"
            android:gravity="end"
            android:layout_gravity="end"
            android:textColor="@color/negro"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>