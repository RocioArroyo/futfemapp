<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grisFondo">

    <ImageView
        android:id="@+id/ivLocal"
        android:layout_width="75dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:gravity="center"
        app:srcCompat="@mipmap/ic_equipos128_foreground" />

    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNombreLocal"
            android:layout_width="75dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="" />

        <TextView
            android:id="@+id/tvPuntosLocal"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="28dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvFechaHora"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tvLineaSeparatoria"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="-" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNombreVisitante"
            android:layout_width="75dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="" />

        <TextView
            android:id="@+id/tvPuntosVisitante"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:gravity="center"
            android:text="" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivVisitante"
        android:layout_width="65dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:gravity="center"
        app:srcCompat="@mipmap/ic_equipos128_foreground" />

</LinearLayout>