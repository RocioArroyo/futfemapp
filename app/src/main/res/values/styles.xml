<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/amarilloLetras</item>
        <item name="colorPrimaryDark">@color/amarilloOscuro</item>
        <item name="actionBarStyle">@style/ActionBarStyle</item>
        <item name="colorControlActivated">@color/blanco</item>
        <item name="colorControlNormal">@color/amarilloLetras</item>
        <item name="android:textColorHint">@color/amarilloLetras</item>
    </style>

    <style name="ActionBarTitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/negro</item>
    </style>

    <style name="ActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="titleTextStyle">@style/ActionBarTitleTextStyle</item>
        <item name="background">@color/amarilloLetras</item>
    </style>

    <style name="AppTheme.FloatingLabel" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/blanco</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="EditText" parent="AppTheme">
        <!-- cursor y línea normal-->
        <item name="colorControlNormal">@color/amarilloLetras</item>
        <!-- cursor y línea con foco-->
        <item name="colorControlActivated">@color/blanco</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="Spinner" parent="Widget.AppCompat.Spinner">
        <item name="backgroundTint">@color/amarilloLetras</item>
    </style>

    <style name="SpinnerTextViewItem" parent="@android:style/Widget.TextView">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/amarilloLetras</item>
    </style>

    <style name="custom_dialog" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowBackground">@color/grisOscuro</item>
        <item name="android:textColor">@color/amarilloLetras</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
